{
  "name": "school-portal",
  "version": "1.0.0",
  "description": "School management portal",
  "repository": "git@github.com:avizcaino/school-portal.git",
  "author": "Alex Vizcaino",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@uxland/project-tools": "^2.1.2",
    "husky": "^8.0.0",
    "lerna": "^7.4.1"
  },
  "workspaces": [
    "app/*",
    "server/*"
  ],
  "scripts": {
    "test": "lerna run test --stream",
    "tdd": "lerna run tdd --stream",
    "dev": "lerna run dev --scope @school-portal/app --verbose",
    "prepare": "husky install",
    "server:build": "lerna run build --scope @school-portal/server --verbose",
    "server:start": "lerna run start --scope @school-portal/server --verbose"
  }
}
